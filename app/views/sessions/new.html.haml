.depot_form
  - if flash[:alert]
    #notice= flash[:alert]

  = form_tag do
    %fieldset
      %legend ログインしてください

      .field
        = label_tag :name, '名前：'
        = text_field_tag :name, params[:name]
      .field
        = label_tag :password, 'パスワード：'
        = password_field_tag :password, params[:password]
      .actions
        = submit_tag 'ログイン'